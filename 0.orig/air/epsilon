FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
epsilonInlet  0.01; // Cmu^0.75 * k^1.5 / L ; L =10
dimensions      [0 2 -3 0 0 0 0];


internalField   uniform $epsilonInlet;

boundaryField
{
    #include            "include/ABLConditions"
	inlet
    {
        type            atmBoundaryLayerInletEpsilon;
        #include        "include/ABLConditions"
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform $epsilonInlet;
        value           uniform $epsilonInlet;
    }
    side
    {
        type            zeroGradient;
    }
    air_to_soil2
    {
        type            epsilonWallFunction;
        Cmu             $Cmu;
        kappa           $kappa;
        value           $internalField;
    }
    top
    {
        type            zeroGradient;
    }
    air_to_buildings
    {
        type            epsilonWallFunction;
        Cmu             $Cmu;
        kappa           $kappa;
        value           $internalField;
    }
	air_to_concrete
    {
        type            epsilonWallFunction;
        Cmu             $Cmu;
        kappa           $kappa;
        value           $internalField;
    }
	air_to_asphalt
    {
        type            epsilonWallFunction;
        Cmu             $Cmu;
        kappa           $kappa;
        value           $internalField;
    }
}


