FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
kInlet          0.1;   // approx k = 1.5*(I*U)^2 ; I = 0.1
dimensions      [0 2 -2 0 0 0 0];


internalField   uniform $kInlet;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $kInlet;
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform $kInlet;
        value           uniform $kInlet;
    }
    side
    {
        type            zeroGradient;
    }
    air_to_soil2
    {
        type            kqRWallFunction;
        value           uniform $kInlet;
    }
    top
    {
        type            zeroGradient;
    }
    air_to_buildings
    {
        type            kqRWallFunction;
        value           uniform $kInlet;
    }
	air_to_concrete
    {
        type            kqRWallFunction;
        value           uniform $kInlet;
    }
	air_to_asphalt
    {
        type            kqRWallFunction;
        value           uniform $kInlet;
    }
}


